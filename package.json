{
  "name": "teste-tecnico-igma",
  "version": "1.0.0",
  "description": "API para cadastro de clientes",
  "main": "index.js",
  "scripts": {
    "test:load-env": "dotenv -e .env.test",
    "test": "jest --runInBand --verbose --coverage=true",
    "test:docker:build": "docker-compose -f docker-compose.test.yml build igma-test --no-cache",
    "test:compose": "npm run test:docker:build && docker-compose -f docker-compose.test.yml",
    "test:postgres:up": "npm run test:compose -- up -d igma-postgres-test",
    "test:docker": "npm run test:compose -- up",
    "ci:test": "npm run test:load-env -- prisma generate && npm run test:load-env -- prisma migrate dev -- jest -- --runInBand --verbose --coverage=true",
    "dev:compose": "docker-compose -f docker-compose.development.yml --env-file .env.development",
    "dev:postgres": "npm run dev:compose -- up -d igma-postgres-development",
    "dev:docker": "npm run dev:compose -- up",
    "dev:load-env": "dotenv -e .env.development",
    "dev:generate": "npm run dev:load-env -- prisma generate",
    "dev:migrate": "npm run dev:load-env -- prisma migrate dev",
    "dev:prisma-studio": "npm run dev:generate && npm run dev:load-env -- prisma studio",
    "dev": "npm run dev:load-env -- -- ts-node-dev --respawn --transpile-only --exit-child --ignore-watch node_modules -r tsconfig-paths/register ./src/infra/http/server.ts"
  },
  "prisma": {
    "schema": "./src/infra/data/databases/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akiraTatesawa/teste-tecnico-igma.git"
  },
  "author": "Arthur Akira Tatesawa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akiraTatesawa/teste-tecnico-igma/issues"
  },
  "homepage": "https://github.com/akiraTatesawa/teste-tecnico-igma#readme",
  "dependencies": {
    "@ngneat/falso": "^6.4.0",
    "@prisma/client": "^4.6.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.6.2",
    "joi": "^17.7.0",
    "node": "^19.1.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.18",
    "@swc/jest": "^0.2.23",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prisma": "^4.6.1",
    "supertest": "^6.3.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^2.0.2",
    "tsc-alias": "^1.7.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.3",
    "typescript-transform-paths": "^3.4.4"
  }
}
